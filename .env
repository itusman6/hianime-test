# Port number (keep default or change if needed)
ANIWATCH_API_PORT=4000

# Allow CORS for all origins (not recommended for production security)
ANIWATCH_API_CORS_ALLOWED_ORIGINS=*

# Disable Rate Limiting (set a high value)
ANIWATCH_API_WINDOW_MS=1800000  # 30 minutes
ANIWATCH_API_MAX_REQS=99999999  # Effectively unlimited

# Optional: Only set if you're deploying on Vercel
# ANIWATCH_API_VERCEL_DEPLOYMENT=true

# Optional: Redis caching (only if needed)
# ANIWATCH_API_REDIS_CONN_URL=rediss://default:your-secure-password@your-redis-instance-name.provider.com:6379

# Cache-Control settings for Vercel Edge Caching
ANIWATCH_API_S_MAXAGE=60
ANIWATCH_API_STALE_WHILE_REVALIDATE=30
